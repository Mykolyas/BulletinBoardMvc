@model List<BulletinBoardMvc.Models.Announcement>

@{
    ViewData["Title"] = "Оголошення";
    var categories = ViewBag.Categories as List<string>;
    var subcategories = ViewBag.SubCategories as List<string>;
    var selectedCategory = ViewBag.SelectedCategory as string;
    var selectedSubCategory = ViewBag.SelectedSubCategory as string;
}

<h1>Список оголошень</h1>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">➕ Створити нове оголошення</a>

<form method="get" class="mb-4">
    <div class="form-group">
        <label for="category">Категорія:</label>
        <select name="category" id="category" class="form-control">
            <option value="">-- Усі категорії --</option>
            @foreach (var cat in categories)
            {
                <option value="@cat" selected="@(cat == selectedCategory ? "selected" : null)">@cat</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="subcategory">Підкатегорія:</label>
        <select name="subcategory" id="subcategory" class="form-control">
            <option value="">-- Усі підкатегорії --</option>
            @foreach (var sub in subcategories)
            {
                <option value="@sub" selected="@(sub == selectedSubCategory ? "selected" : null)">@sub</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">🔍 Застосувати фільтр</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-2">❌ Очистити</a>
</form>


@if (Model.Count == 0)
{
    <p>🔎 Оголошення не знайдено.</p>
}
else
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Назва</th>
                <th>Опис</th>
                <th>Категорія</th>
                <th>Підкатегорія</th>
                <th>Статус</th>
                <th>Дата створення</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Title</td>
                    <td>@a.Description</td>
                    <td>@a.Category</td>
                    <td>@a.SubCategory</td>
                    <td>@(a.Status ? "✅ Активне" : "❌ Неактивне")</td>
                    <td>@a.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = a.Id })" class="btn btn-sm btn-warning">✏️ Редагувати</a>
                        <a href="@Url.Action("Delete", new { id = a.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Ви впевнені, що хочете видалити це оголошення?');">🗑️ Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
